@model Lab5.Models.Tarea
@{
    ViewBag.Title = "IngresoTarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IngresoTarea</h2>

    <h1> Tareas  </h1>


    <form action="/Home/IngresoTarea/" method="post">
        <div class="form-horizontal">
            <input type="submit" value="Mostrar listado de tareas" class="btn btn-default" />
        </div>
    </form>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

